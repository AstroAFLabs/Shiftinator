{
  "name": "shift-scheduler",
  "version": "1.0.0",
  "description": "A simple shift scheduler app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourapp.id",
    "productName": "ShiftScheduler",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "render.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "path/to/your/icon.ico"
    }
  },
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "mysql2": "^3.10.0",
    "pdfkit": "^0.12.3"
  },
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  }
}
